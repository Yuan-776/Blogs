@model IEnumerable<Blogs.Models.ProductViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice.ToString("C2")</td>
                <td>@product.UnitsInStock</td>
            </tr>
        }
    </tbody>
</table>
